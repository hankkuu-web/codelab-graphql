{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  }
}